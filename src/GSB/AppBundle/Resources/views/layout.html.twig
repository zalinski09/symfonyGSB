<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Intranet du Laboratoire Galaxy-Swiss Bourdin{% endblock %}</title>

    {% stylesheets filter='cssrewrite'
    'bundles/gsbapp/css/*.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}

    {% javascripts
    'bundles/gsbapp/js/*.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
</head>

<body>

{% block menu %}
    {% include 'GSBAppBundle:Menu:menu.html.twig' %}
{% endblock %}


<div class="row-fluid" >
    
    <div class="col-sm-3">

    </div>

    <div class="col-sm-6">
        {% block sessionBag %}
            {% for flashMessage in app.session.flashbag.get('info') %}
                <div class="info alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {%  endblock %}
        {% block body %}
        
        {% endblock %}
    </div>

    <div class="col-sm-3">

    </div>

</div>

</body>
</html>